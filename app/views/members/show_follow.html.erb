<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">

        <h2 class='inline'>
          <% if current_user != @user %>
            <%= @user.username %>さんの
          <% else %>
            <span> </span>
          <% end %>

          <%= @title %>
        </h2>

        <% if @title == 'フォローしているユーザー' %>
          <span><%= @user.following.count %>フォロー</span>
        <% elsif @title == 'フォロワー' %>
          <span><%= @user.followers.count %>フォロワー</span>
        <% end %>
        <hr>

      <% if @users.any? %>
        <ul class="users_follow">
          <% will_paginate @users %>
            <% @users.each do |user| %>
              <li><%= link_to user.username, member_path(user) %></li>
            <% end %>
          <%= will_paginate @users %>
        </ul>
      <% else %>
        <p class="users_follow"><%= @title %>がいません</p>
      <% end %>

    </div>
  </div>
</div>
