<% if current_user == @user %>
  <h2>マイページ<h2><hr>

  <section class="stats">
    <%= render 'shared/stats' %>
  </section>

  <% will_paginate @tweets %>
  <% @tweets.each do |tweet| %>
    <p><%= tweet.golf.name %></p>
    <p>評価：<%= tweet.point.valuation %></p>
    <p><%= tweet.text %></p>
    <%= link_to '詳細', tweet %>
    <%= link_to '編集', edit_tweet_path(tweet) %>
    <%= link_to '削除', tweet, method: :delete, data: { confirm: '本当に削除しますか?' } %>
    <hr>
  <% end %>
  <%= will_paginate @tweets %>

<% else %>
  <h2><%= @user.username %>さんのページ</h2>

  <section class="stats">
    <%= render 'shared/stats' %>
  </section>
  <%= render 'follow_form' %>

  <% will_paginate @tweets %>
  <% @tweets.each do |tweet| %>
    <p><%= tweet.golf.name %></p>
    <p>評価：<%= tweet.point.valuation %></p>
    <p><%= tweet.text %></p>
    <hr>
  <% end %>
  <%= will_paginate @tweets %>
<% end %>
