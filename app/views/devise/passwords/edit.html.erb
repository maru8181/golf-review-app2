<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">

      <h2>パスワードの変更</h2><hr>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <table class=devise_table>

          <tr>
            <th><%= f.label :password, "新しいパスワード" %></th>
            <td><%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上で入力してください)</em>
            <% end %></td>
          </tr>

          <tr>
            <th><%= f.label :password_confirmation, "新しいパスワード(再入力)" %></th>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>

        </table><hr>

        <div class="actions">
          <%= f.submit "パスワードを変更する", class: 'devise-btn' %>
        </div>

      <% end %><hr>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
